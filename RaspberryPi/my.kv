            value: root.val_min
            orientation: "horizontal"
            on_value: 
                root.slide_val_min(*args)
        
        Label:
            id: val_max_label
            text: "Val max: " + str(root.val_max)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 255
            id: val_max_slider
            value: root.val_max
            orientation: "horizontal"
            on_value: 
                root.slide_val_max(*args)

    BoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.775, "y": 0} 
        size_hint: 0.43, 0.56

        Image:
            id: image
            allow_stretch: False
            keep_ratio: False




