    Label:
        font_size: root.font_size_score
        pos_hint: {"center_x":0.575, "y":0.32}
        size_hint: 0.2, 0.2
        text: ":"
    

<LiveCalculationWindow>:
    name: "Live_calculation"

    Button:
        text: "Go Back"
        on_release:
            root.manager.transition.direction = "right"
            app.root.current = "Main"

    Button:
        size_hint: 0.5, 0.1
        pos_hint: {"center_x":0.5, "y":0.5}
        text: "Hit me"
        on_release: root.Counter_function()

    Button:
        size_hint: 0.5, 0.1
        pos_hint: {"center_x":0.5, "y":0.3}
        text: "Thread"
        on_release: root.First_thread()

    Button:
        size_hint: 0.5, 0.1
        pos_hint: {"center_x":0.5, "y":0.0}
        text: "Thread"
        on_release: root.test()

    Label:
        size_hint: 0.5, 0.1
        pos_hint: {"center_x":0.5, "y":0.15}
        id: lbl
        text: "Numbers"

<ColorDetectionWindow>:
    name: "Color_detection"
    #slide_text_hue_min: slider_hue_min
    #slide_text_hue_max: slider_hue_max
    #slide_text_sat_min: slider_sat_min
    #slide_text_sat_max: slider_sat_max
    #slide_text_val_min: slider_val_min
    #slide_text_val_max: slider_val_max
    

    Button:
        text: "Back"
        size_hint: 0.2, 0.12
        pos_hint: {"center_x":0.11, "y":0.01}
        font_size: root.font_size_buttons
        on_release:
            root.manager.transition.direction = "right"
            app.root.current = "Main"  
            root.StopCaptureThread()      

    Button:
        text: "    Color \nDetection"
        size_hint: 0.2, 0.225
        id: btn_start_color
        pos_hint: {"center_x":0.45, "y":0.325}
        font_size: root.font_size_buttons
        on_release:
            root.CaptureThread()
            root.GetColors()


    Button:
        text: "Apply"
        size_hint: 0.2, 0.12
        id: btn_apply
        pos_hint: {"center_x": 0.45, "y":0.01}
        font_size: root.font_size_buttons
        disabled: True
        on_release:
            root.UpdateColors()
            root.GetColors()
            root.StopCaptureThread()
            disabled: True
    Button:
        text: "Help"
        size_hint: 0.2, 0.1
        pos_hint: {"center_x": 0.45, "y":0.2}
        font_size: root.font_size_buttons
        on_release:
            root.Help_btn()


    Button:
        text: "Last"
        size_hint: 0.15, 0.1
        pos_hint: {"center_x":0.085, "y":0.45}
        font_size: root.font_size_buttons
        on_press:
            root.GetColors()
            root.ChangeHSVColor("LAST")

    Button:
        text: "Blue"
        size_hint: 0.15, 0.1
        pos_hint: {"center_x":0.085, "y":0.325}
        font_size: root.font_size_buttons
        id: btn_blue
        on_press:
            root.GetColors()
            root.ChangeHSVColor("BLUE")
            #root.slide_hue_min(*args)

    Button:
        text: "Yellow"
        size_hint: 0.15, 0.1
        pos_hint: {"center_x":0.25, "y":0.45}
        font_size: root.font_size_buttons
        on_press:
            root.GetColors()
            root.ChangeHSVColor("YELLOW")

    Button:
        text: "Green"
        size_hint: 0.15, 0.1
        pos_hint: {"center_x":0.25, "y":0.325}
        font_size: root.font_size_buttons
        on_press:
            root.GetColors()
            root.ChangeHSVColor("GREEN")

    BoxLayout:
        orientation: "vertical"
        pos_hint: {"x": 0, "y": 0.6}
        size_hint: 0.83, 0.4

        Label:
            id: hue_min_label
            text: "Hue min: " + str(root.hue_min)
            pos_hint: {"x": 0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 179
            id: hue_min_slider
            value: root.hue_min
            step: 1
            orientation: "horizontal"
            on_value: 
                root.slide_hue_min(*args)
                #root.thread()
                #root.updateImage()
        
        Label:
            id: hue_max_label
            text: "Hue max: " + str(root.hue_max)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 179
            id: hue_max_slider
            value: root.hue_max
            orientation: "horizontal"
            on_value: 
                root.slide_hue_max(*args)
                #root.thread()

        Label:
            id: sat_min_label
            text: "Sat min: " + str(root.sat_min)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 255
            id: sat_min_slider
            value: root.sat_min
            orientation: "horizontal"
            on_value: 
                root.slide_sat_min(*args)
                #root.thread()

        Label:
            id: sat_max_label
            text: "Sat max: " + str(root.sat_max)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 255
            id: sat_max_slider
            value: root.sat_max
            orientation: "horizontal"
            on_value: 
                root.slide_sat_max(*args)
                #root.thread()

        Label:
            id: val_min_label
            text: "Val min: " + str(root.val_min)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 255
            id: val_min_slider
            value: root.val_min
            orientation: "horizontal"
            on_value: 
                root.slide_val_min(*args)
                #root.thread()
        
        Label:
            id: val_max_label
            text: "Val max: " + str(root.val_max)
            pos_hint: {"x":0.6, "y": 0}
            font_size: root.font_size
        Slider:
            min: 0
            max: 255
            id: val_max_slider
            value: root.val_max
            orientation: "horizontal"
            on_value: 
                root.slide_val_max(*args)
                #root.thread()

    BoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.78, "y": 0.01}
        size_hint: 0.40, 0.54

        Image:
            source: root.img_src
            id: image
            allow_stretch: False
            keep_ratio: False
        #Image:




