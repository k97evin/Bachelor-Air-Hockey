    Button:
        text: "+"
        size_hint: 0.1, 0.1
        pos_hint: {"center_x":0.5, "y":0.5}    
        on_release:
            root.ScoreRobot(1)
    Button:
        text: "-"
        size_hint: 0.1, 0.1
        pos_hint: {"center_x":0.65, "y":0.5}    
